{
    "root": true,
    "overrides": [
        {
            "env": {
                "node": true
            },
            "files": [
                "**/*.js"
            ],
            "extends": [
                "eslint:recommended",
                "plugin:import/recommended"
            ],
            "parserOptions": {
                "ecmaVersion": 2022,
                "sourceType": "module"
            },
            "globals": {
                "window": "readonly",
                "localStorage": "readonly",
                "sessionStorage": "readonly"
            },
            "rules": {
                "semi": [
                    "error",
                    "always"
                ],
                "quotes": [
                    "error",
                    "single"
                ]
            }
        }
    ]
}